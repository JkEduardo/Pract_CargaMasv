@model Modelos.UsuarioViewModel
@{
    ViewData["Title"] = "Exportar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/css/site.css"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>
    <div class="header-container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                <li class="breadcrumb-item"><a href="#">Centro de notificaciones</a></li>
                <li class="breadcrumb-item active" aria-current="page">Notificaciones App</li>
            </ol>
        </nav>
        <div class="title-and-button">
            <h1 class="page-title">Notificaciones app</h1>
            <a href="#" class="btn btn-green create-notification-btn">
                Crear notificación <span class="plus-icon">+</span>
            </a>
        </div>
    </div>

    <hr>
    <div class="row">
        <div class="col-md-12 align-self-lg-center">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="col-nombre">Nombre</th>
                            <th class="col-fecha">Fecha de creación</th>
                            <th class="ccol-sexo">Status</th>
                            <th class="col-optionse">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in Model.ListUsuarios)
                        {
                            <tr>
                                <td class="descripcion">@usuario.Nombre @usuario.ApellidoP @usuario.ApellidoM</td>                                
                                <td>@usuario.FechaNacimeinto</td>
                                <td>
                                    <span class="status @(usuario.StatusUsuario ? "text-success" : "text-danger")">
                                        @(usuario.StatusUsuario ? "ACTIVA" : "INACTIVA")
                                    </span>
                                </td>
                                <td>
                                    <i class="bi bi-pencil icono-accion" data-id="@usuario.IdBa"></i>
                                    <i class="bi bi-eye icono-accion" onclick="verDetalle(@usuario.IdBa)"></i>
                                    @* <i class="bi bi-trash icono-accion" data-id="@usuario.IdBa"></i> *@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="pagination-wrapper">
    <!-- Selector de registros por página -->
    <div class="pagination-controls">
        <select id="recordsPerPage" class="records-dropdown form-select">
            @foreach (var option in Model.RegistrosPorPaginaOpciones)
            {
                var isSelected = Model.RegistrosPorPagina == option ? "selected" : "";  
                <option value="@option" isSelected>@option por página</option>
            }
        </select>
        <span id="record-count">
                        @{
                        // Calcular cuántos registros se muestran actualmente
                        int registrosMostrados = Model.CurrentPage * Model.RegistrosPorPagina;
                        if (registrosMostrados > Model.TotalRegistros)
                        {
                        registrosMostrados = Model.TotalRegistros; // Asegurar que no exceda el total
                        }
                        }
                        @registrosMostrados de @Model.TotalRegistros registros
        </span>                       
    </div>

    <!-- Paginación de páginas -->
    <div class="pagination-container">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-end"> <!-- Alineado a la derecha -->
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Exportar", new { page = Model.CurrentPage - 1 })" aria-label="Anterior">
                            <span aria-hidden="true">&lt;</span>
                        </a>
                    </li>
                }
                @for (var i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Exportar", new { page = i, recordsPerPage = Model.RegistrosPorPagina })">@i</a>
                    </li>
                }
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Exportar", new { page = Model.CurrentPage + 1 })" aria-label="Siguiente">
                            <span aria-hidden="true">&gt;</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>


                
                
                    
                
        </div>
    </div>
</div>


    <div class="modal fade" id="detalle-modal" tabindex="-1" role="dialog" aria-labelledby="detalleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered custom-modal-size .modal-dialog" role="document">
            <div class="modal-content detalle-usuario-modal">
                <div class="modal-header">
                    <h5 class="modal-title" id="detalleModalLabel">Detalle del Usuario</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Aquí se carga la vista parcial con AJAX -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Aceptar</button>
                </div>
            </div>
        </div>
    </div>



    @* <input type="button" id="btnExportarExcel" value="Enviar petición">
    <div id="response"></div> *@

    <!-- Asegúrate de incluir jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
     <script src="~/js/sweetalert2.all.min.js"></script>    
    <script>

        document.getElementById('recordsPerPage').addEventListener('change', function () {
            var selectedValue = this.value; // Obtener el valor seleccionado
            var url = '@Url.Action("Exportar", "Exportar")'; // Cambia "Usuario" por tu controlador correcto

            // Si el valor seleccionado es "Todos", se establece en 0 para mostrar todos los registros
            if (selectedValue === 'all') {
                selectedValue = 0;
            }

            // Redirigir con los parámetros seleccionados
            window.location.href = url + '?recordsPerPage=' + selectedValue + '&page=1';
        });


        $(document).ready(function () {
            // Cuando se haga clic en el botón con ID "btnExportarExcel"
            $('#btnExportarExcel').click(function () {
                // Realizar la petición AJAX
                $.ajax({
                    url: '@Url.Action("CargaMasiva", "Exportar")/', // URL de la acción en el controlador
                    type: 'POST', // Método HTTP a utilizar
                    success: function (response) {
                        // Manejar la respuesta aquí, si es necesario
                        if (response.success) {
                            alert('Exportación a Excel exitosa!');
                        } else {
                            alert('Hubo un error en la exportación a Excel.');
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('Error al intentar exportar a Excel: ' + error);
                    }
                });
            });
        });

            
        $(document).ready(function () {
            $('.btn-delete').click(function () {
                var id = $(this).data('id');
                var url = '@Url.Action("Delete", "Usuario")';
                debugger
                // Verificar si el checkbox está seleccionado
                // var isChecked = $('.estatus-checkbox').is(':checked');
                var isChecked = $(this).closest('tr').find('.estatus-checkbox').is(':checked');

                if (isChecked) {
                    Swal.fire({
                        title: 'Usuario Activado',
                        text: 'Primero debe desactivar al usuario.',
                        icon: 'warning',
                        confirmButtonColor: '#3085d6',
                        confirmButtonText: 'Ok'
                    });
                    return; // Salir de la función para evitar que se ejecute el código de eliminación
                }
                else 
                {
                    // Mostrar la confirmación de eliminación
                    Swal.fire({
                        title: '¿Estás seguro?',
                        text: '¡No podrás revertir esto!',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Sí, eliminarlo!',
                        cancelButtonText: 'Cancelar'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            $.ajax({
                                url: url,
                                type: 'POST',
                                data: { IdUsuario: id },
                                success: function (response) {
                                    if (response.success) {
                                        Swal.fire({
                                            title: '¡Eliminado!',
                                            text: 'El registro ha sido eliminado.',
                                            icon: 'success'
                                        }).then(() => {
                                            location.reload(); // Recargar la página para actualizar la lista de usuarios
                                        });
                                    } else {
                                        Swal.fire({
                                            title: 'Error',
                                            text: 'Error al eliminar el registro.',
                                            icon: 'error'
                                        });
                                    }
                                },
                                error: function (xhr, status, error) {
                                    Swal.fire({
                                        title: 'Error',
                                        text: 'Error al intentar eliminar el registro: ' + error,
                                        icon: 'error'
                                    });
                                }
                            });
                        } else {
                            Swal.fire({
                                title: 'Cancelado',
                                text: 'La acción ha sido cancelada.',
                                icon: 'info'
                            });
                        }
                    });
                }

                
            });
        });

        $('.btn-edit').click(function () {
            var id = $(this).data('id');
            var url = '@Url.Action("Edit", "Usuario")';

            $.ajax({
                url: url,
                type: 'GET',
                data: { IdUsuario: id },
                success: function (response) {
                    if (response.success) {
                        // Aquí puedes manejar la respuesta, por ejemplo, cargar un modal con los datos
                        $('#modalEdit').html(response.html);
                        $('#modalEdit').modal('show');
                    } else {
                        Swal.fire({
                            title: 'Error',
                            text: 'Error al cargar los datos de edición.',
                            icon: 'error'
                        });
                    }
                },
                error: function (xhr, status, error) {
                    Swal.fire({
                        title: 'Error',
                        text: 'Error al intentar cargar los datos de edición: ' + error,
                        icon: 'error'
                    });
                }
            });
        });

        debugger
        function verDetalle(id) {
            $.ajax({
                url: '@Url.Action("DetalleUsuario", "Exportar")',
                type: 'GET',
                data: { id: id },
                success: function (result) {
                    $('#detalle-modal .modal-content').html(result);
                    $('#detalle-modal').modal('show');
                },
                error: function () {
                    alert("Error al cargar los detalles del usuario");
                }
            });
        }


    </script>

</body>
</html>

<!-- Modal para Editar -->
<div id="modalEdit" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Editar Usuario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- El contenido de edición se cargará aquí -->
                <p>Cargando...</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Ver Detalle -->
<div id="modalDetail" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Detalles del Usuario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- El contenido de detalles se cargará aquí -->
                <p>Cargando...</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>



